{
  "name": "modern-web-monorepo",
  "version": "1.0.0",
  "description": "A modern web application monorepo with Next.js frontend and backend integration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "cd apps/web && npm run start",
    "start:api": "cd apps/api && npm run start",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd apps/api && npm run lint",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm run install:web && npm run install:api && npm run install:packages",
    "install:web": "cd apps/web && npm install",
    "install:api": "cd apps/api && npm install",
    "install:packages": "cd packages/ui && npm install && cd ../utils && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "framer-motion"
  ],
  "author": "",
  "license": "MIT"
}
